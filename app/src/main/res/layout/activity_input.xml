<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nzy.zkyt.kudipad.ui.InputCodeActivity">
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="编码"
            android:textColor="@color/txtcolor"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/SizePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/txt_content"
            android:textSize="@dimen/SizeContent"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="查询"
            android:background="@drawable/btn_color"
            android:layout_width="50dp"
            android:layout_height="35dp" />
    </LinearLayout>
    <View style="@style/line"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="条码"
            android:textColor="@color/txtcolor"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/SizePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/txt_content"
            android:textSize="@dimen/SizeContent"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="查询"
            android:background="@drawable/btn_color"
            android:layout_width="50dp"
            android:layout_height="35dp" />
    </LinearLayout>
    <View style="@style/line"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="品名"
            android:textColor="@color/txtcolor"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/SizePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/txt_content"
            android:textSize="@dimen/SizeContent"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/line"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="编码"
            android:textColor="@color/txtcolor"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/SizePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/txt_content"
            android:textSize="@dimen/SizeContent"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="查询"
            android:background="@drawable/btn_color"
            android:layout_width="50dp"
            android:layout_height="35dp" />
    </LinearLayout>
    <View style="@style/line"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="规格"
                    android:textColor="@color/txtcolor"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/SizePrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/txt_content"
                    android:textSize="@dimen/SizeContent"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="单品总量"
                    android:textColor="@color/txtcolor"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/SizePrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/txt_content"
                    android:textSize="@dimen/SizeContent"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="零售价"
                    android:textColor="@color/txtcolor"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/SizePrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/txt_content"
                    android:textSize="@dimen/SizeContent"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="当前数量"
                    android:textColor="@color/txtcolor"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/SizePrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/txt_content"
                    android:textSize="@dimen/SizeContent"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="SKU数："
            android:textColor="@color/txtcolor"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/SizePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0"
            android:textSize="@dimen/SizeTitle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/ettxtcolor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:text="总数量："
            android:textColor="@color/txtcolor"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/SizePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0.0"
            android:textSize="@dimen/SizeTitle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/ettxtcolor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:text="确认"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/onbtn_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
